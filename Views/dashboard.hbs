<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ title }}</title>
    <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v1.1.0/mapbox-gl.js'></script>
    <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v1.1.0/mapbox-gl.css' rel='stylesheet' />
    <style>
        body {
            margin: 0;
            padding: 0;
        }

        #map {
            position: absolute;
            height: 40%;
            width: 40%;
        }
    </style>
</head>

<body>
    <h1>{{ title }}</h1>
    <p>Welcome to {{ title }}</p>
    <form action="/api/dashboard/SaveNewTracker" method="POST">
        <p>Stock Number</p>
        <input type="text" placeholder="Stock Number" name="stockNumber">
        <input type="text" placeholder="TrackerUID" name="TrackerUID">
        <button type="submit">Add</button>
    </form>
    <form action="/api/dashboard/refreshList" method="POST">
        <button type="submit">Refresh</button>
    </form>
    <ul class="Tracker_List">
        {{#each trackerDevice}}
        <li>{{this}}</li>
        {{/each}}
    </ul>

    <div id='map'></div>
    <script>
        mapboxgl.accessToken = 'pk.eyJ1IjoiemlvbjM3OSIsImEiOiJjanhyNWI0NnIwNWNtM2RtbWsyYm5peWx5In0.eURIQxwjnz10wwzmNOSJGA';
        var map = new mapboxgl.Map({
            container: 'map', // container id
            style: 'mapbox://styles/mapbox/streets-v11', // stylesheet location
            center: [-74.50, 40], // starting position [lng, lat]
            zoom: 9 // starting zoom
        });
    </script>
</body>

</html>